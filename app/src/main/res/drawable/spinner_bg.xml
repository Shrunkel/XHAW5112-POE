<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- background color -->
    <solid android:color="#E6E1C5" />

    <!-- rounded corners -->
    <corners android:radius="8dp" />

    <!-- border line -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- internal padding -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
