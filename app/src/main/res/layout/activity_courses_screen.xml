<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36472E"
    tools:context=".CoursesScreen">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#E6E1C5"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="215dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:contentDescription="Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/logodesign" />
    </LinearLayout>

    <!-- SCROLLABLE CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- COURSE SPINNER -->
            <Spinner
                android:id="@+id/course_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_bg"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="12dp" />

            <!-- COURSE IMAGE -->
            <ImageView
                android:id="@+id/courseImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:contentDescription="Course Image"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp" />

            <!-- COURSE DETAILS -->
            <LinearLayout
                android:id="@+id/course_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#36472E">

                <TextView
                    android:id="@+id/course_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sewing"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black" />

                <TextView
                    android:id="@+id/fees_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fees:"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/course_fees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R500 per month"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/purpose_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purpose:"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/course_purpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To teach basic to intermediate sewing techniques."
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/course_topics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Types of stitches\n• Pattern cutting\n• Fabric selection\n• Machine handling"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/view_courses_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all sewing courses"
                    android:backgroundTint="#E6E1C5"
                    android:textColor="#000"
                    android:layout_marginTop="16dp" />

                <Button
                    android:id="@+id/view_courses_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#E6E1C5"
                    android:text="View all sewing courses"
                    android:textColor="#000" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BOTTOM NAVIGATION -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#A3A087"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/pricesBtn"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="Home"
            android:scaleType="fitCenter"
            android:src="@drawable/book" />

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="Home"
            android:scaleType="fitCenter"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/enquireBtn"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="Home"
            android:scaleType="fitCenter"
            android:src="@drawable/enquire" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
