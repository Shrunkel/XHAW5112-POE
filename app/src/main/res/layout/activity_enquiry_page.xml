<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:background="#F5E9CC">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/logodesign"
                android:contentDescription="Logo" />
        </LinearLayout>

        <!-- Enquiry Form Section -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#36472E"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:elevation="3dp"
                android:layout_margin="8dp"
                android:clipToOutline="true">

                <TextView
                    android:id="@+id/enquiry_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit Your Enquiry"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:backgroundTint="#7E57C2"
                    android:layout_marginBottom="12dp"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/etLName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:backgroundTint="#7E57C2"
                    android:layout_marginBottom="12dp"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/etNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:backgroundTint="#7E57C2"
                    android:inputType="phone"
                    android:layout_marginBottom="12dp" />

                <!-- Number of Courses -->
                <Spinner
                    android:id="@+id/numberSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000"
                    android:layout_margin="20dp" />

                <!-- Container for dynamic course selection spinners -->
                <LinearLayout
                    android:id="@+id/courseContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit Enquiry"
                    android:backgroundTint="#E6E1C5"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:layout_marginTop="12dp" />

                <Button
                    android:id="@+id/logOutBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#E6E1C5"
                    android:padding="12dp"
                    android:text="Log Out "
                    android:textColor="#000"
                    android:textSize="16sp" />

            </LinearLayout>

        </ScrollView>

        <!-- Bottom Navigation -->
        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#A3A087"
            android:gravity="center">

            <ImageButton
                android:id="@+id/pricesBtn"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="Prices"
                android:scaleType="fitCenter"
                android:src="@drawable/book" />

            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="Home"
                android:scaleType="fitCenter"
                android:src="@drawable/home" />

            <ImageButton
                android:id="@+id/enquireBtn"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="Enquire"
                android:scaleType="fitCenter"
                android:src="@drawable/enquire" />
        </LinearLayout>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
