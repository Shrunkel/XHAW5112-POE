<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- ðŸ”¹ SCROLLABLE MAIN CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ðŸ”¹ Top Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#F5E9CC"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_weight="1"
                    android:contentDescription="Logo"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logodesign" />
            </LinearLayout>

            <!-- ðŸ”¹ Advertisement Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E0E0E0"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Welcome to Empowerthenation!"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:paddingBottom="6dp" />
            </LinearLayout>

            <!-- ðŸ”¹ Scrollable Course Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#36472E">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="143dp"
                    android:src="@drawable/general" />

                <TextView
                    android:id="@+id/location_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center"
                    android:text="Empower The Nation is a community-focused organisation dedicated to providing practical skills training that helps individuals improve their lives and contribute meaningfully to society. Our organisation offers six week and and six month courses that help an individual learn the skills of the course. At Empowerthenation, we believe in empowering individuals through education and enabling them to build better futures for themselves. The logo represents empowering humanity and nurturing a better world."
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- ðŸ”¹ Social Media Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <ImageButton
                        android:id="@+id/btnYouTube"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="8dp"
                        android:src="@drawable/youtube"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:contentDescription="YouTube" />

                    <ImageButton
                        android:id="@+id/btnTwitter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="8dp"
                        android:src="@drawable/twitter"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:contentDescription="Twitter" />

                    <ImageButton
                        android:id="@+id/btnTikTok"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="8dp"
                        android:src="@drawable/tiktok"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:contentDescription="TikTok" />

                    <ImageButton
                        android:id="@+id/btnFacebook"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="8dp"
                        android:src="@drawable/faebook"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:contentDescription="Facebook" />

                    <ImageButton
                        android:id="@+id/btnInstagram"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="8dp"
                        android:src="@drawable/instagram"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:contentDescription="Instagram" />
                </LinearLayout>
            </LinearLayout>

            <!-- ðŸ”¹ Bottom Navigation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#A3A087"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/pricesBtn"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="Prices"
                    android:scaleType="fitCenter"
                    android:src="@drawable/book" />

                <ImageButton
                    android:id="@+id/homeBtn"
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="Home"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home" />

                <ImageButton
                    android:id="@+id/enquireBtn"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="Enquire"
                    android:scaleType="fitCenter"
                    android:src="@drawable/enquire" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ðŸ”¹ Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#F5E9CC" />

</androidx.drawerlayout.widget.DrawerLayout>
